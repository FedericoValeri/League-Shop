<div class="row">
    {{#each users}}
    <div class="row">
        {{#each this}}
        <div class="col-sm-6 col-md-4" id="colonnaCarta">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Email: {{this.email}}</h5>
                    <p class="card-text">Password: {{this.password}}</p>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="/user/{{this.email}}" class="btn btn-info">
                                <span>Info Utente</span>
                            </a>
                            <form action="/admin/{{this._id}}" method="post">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-danger">Delete Account</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>