<br>

<div class="container">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-sm-6 col-md-4 col-md-offset-4" name="login">
            <div class="account-wall">
                <img width="40px" height="40px" src="https://images.emojiterra.com/mozilla/512px/1f512.png" 
                    alt=""> {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{#each messages}}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
                {{/if}}
                <h1 class="text-center login-title">Admin login</h1>

                <form class="form-signin" action="/admin/signin" method="post">
                    <div class="form-group">
                        <label for="username">
                            <span style="color:rgb(161, 118, 7)">Username</span>
                        </label>
                        <input type="text" id="username" name="username" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">
                            <span style="color:rgb(161, 118, 7)">Password</span>
                        </label>
                        <input type="password" id="password" name="password" class="form-control">
                    </div>
                    <div class="login-button">
                        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                        <button type="submit" name="login-button">Login</button>
                    </div>
                    <span class="clearfix"></span>
                </form>
            </div>
        </div>
        <div class="col">

        </div>
    </div>
</div>