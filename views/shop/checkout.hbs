<br>
<div class="row">
    <div id="contenitoreCheck" class="col-md-6 col-md-offset-4 col-sm-offset-3">
        <h1 style="color:rgb(255, 255, 255)">Riepilogo:</h1>
        <ul class="list-group">
            {{#each champions}}
            <li class="list-group-item">
                <div class="row">
                    <div class="col-6 col-sm-4 col-md-7 col-md-offset-3 col-sm-offset-3">
                        <img width="150" height="150" src="{{this.item.imagePath}}"></img>
                    </div>
                    <div class="col-6 col-sm-5 col-md-3 col-md-offset-3 col-sm-offset-3">
                        <label>Nome campione:</label>
                        <br>
                        <strong> {{this.item.name}}</strong>
                    </div>
                    <div class="col-sm-3 col-md-2 col-md-offset-3 col-sm-offset-3">
                        <label>Prezzo:</label>
                        <br>
                        <strong style="color:rgb(26, 198, 250);font-weight:bold">{{this.price}} EB</strong>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
        <br>
        <h4 style="color:rgb(255, 255, 255)">Totale: {{total}} EB</h4>
        <h4 style="color:rgb(255, 255, 255)">Nuovo bilancio: {{nuovoBilancio}}</h4>
        <hr>
        <div class="row">
            <div class="col-md-12">
                <form style="float:right" action="/cart/checkout/{{user._id}}" method="post" id="checkout-form">
                    <button type="submit" class="btn btn-success">Buy now</button>
                </form>
                <a style="float: left" href="/cart" class="btn btn-light">Indietro</a>
            </div>
        </div>
    </div>
</div>