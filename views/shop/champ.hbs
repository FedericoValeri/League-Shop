<br> {{#each champion}}

<div class="row" id="bio">
   

    <div class="col-sm-6 col-md-8" id="colonnaSinistraChampBio">
        <div class="row">
            <div class="caption">
                <div class="col-sm-6 col-md-4" id="roleBio">
                     <div align="center" class="caption" id="roleIcon">
                    {{#if_eq role 'Assassino'}}
                    <img width="100" height="100" src="https://i.imgur.com/vXz3C1X.png"> 
                    {{/if_eq}} {{#if_eq role 'Mago'}}
                    <img width="100" height="100" src="https://i.imgur.com/OZUmpLa.png"> 
                    {{/if_eq}} {{#if_eq role 'Tiratore'}}
                    <img width="100" height="100" src="https://i.imgur.com/hEpbJma.png"> 
                    {{/if_eq}} {{#if_eq role 'Combattente'}}
                    <img width="100" height="100" src="https://i.imgur.com/Y3lEWpZ.png"> 
                    {{/if_eq}} {{#if_eq role 'Tank'}}
                    <img width="100" height="100" src="https://i.imgur.com/CZ6x6UE.png"> 
                    {{/if_eq}} {{#if_eq role 'Supporto'}}
                    <img width="100" height="100" src="https://i.imgur.com/YPXsrns.png">
                    {{/if_eq}}
                    <h3 align="center" id="champBio" name="role"> {{role}}</h3>
                </div>
            </div>

            <div class="col-sm-6 col-md-8" id="nameBio">
                <div class="caption">
                    <h1 id="champBio" name="nameBio"> {{name}}</h1>
                    <h2 id="champBio" name="titleBio"> {{title}}</h2>
                </div>           
            </div>
        </div>
           
            {{#each skills}}
            <div class="row" id="rigaSkill">
                <div class="col-sm-6 col-md-2">                    
                    <div class="caption" align="center">
                    <img width="80" height="80" src="{{imageSrc}}" id="imageSkill">
                </div></div>
                <div class="col-sm-6 col-md-10">
                    <div class="row">
                        <h2>{{title}} - {{letter}}</h2>
                    </div>
                    <div class="row" width="380">
                        <div class="caption">
                        <p>{{description}}</p>
                        </div>
                    </div>
                </div>

            </div>

            {{/each}}
        </div>
    </div>
     <div class="col-sm-6 col-md-4" id="colonnaDestraChampBio">

        <div class="row">
            <div class="caption" align="center">
                 <img align="center" width="450" height="450" src="{{imagePath}}" id="champBioImage">
            </div>                
        </div>


        <div class="caption">
            <h3 id="champBio" class="description">{{description}}</h3>            
        </div>

    </div>

</div>
{{/each}}