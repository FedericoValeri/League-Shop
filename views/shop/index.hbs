<div class="row">
    {{#each champions}}
    <div class="row">
        {{#each this}}
        <div class="col-sm-6 col-md-3" id="colonnaCarta">
            <div class="card" style="width: 100%;" id="champ">
                <img class="card-img-top" name="champImage" src="{{this.imagePath}}">
                <div class="card-body">
                    <div class="row" name="rigaTitoloPrezzo">
                        <div class="col-sm-6 col-md-8" name="champName">
                            <h2 class="card-title" name="name"> {{this.name}}</h2>
                        </div>
                        <div class="col-sm-6 col-md-4" align="right" name="prezzo">
                            <h2 name="price" align="left">{{this.price}}<img name="EB" width="25" height="34" src="https://i.imgur.com/YsdvMMg.png">
                            </h2>
                        </div>

                    </div>

                    <h3 class="titleHome" name="titleHome">{{this.title}}
                    </h3>
                    <div class="clearfix">

                        <a href="/champ/{{this._id}}" class="button" style="vertical-align:middle" role="button" id="informazioni">
                            <span>Informazioni </span>
                        </a>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button" id="aggiungi">Aggiungi al carrello</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>