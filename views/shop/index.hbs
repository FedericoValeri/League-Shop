<!--Filters and Search bar-->
<div class="row" id="barrasopra">
    <!--filter by role column-->
    <div class="col-5 col-md-3">
        <strong id="filtra" style="font-size: 21px">Filtra: </strong>
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropFiltra" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            {{role}}
        </button>
        <div class="dropdown-menu" aria-labelledby="dropFiltra">
            <a class="dropdown-item" href="/">Tutti</a>
            <a class="dropdown-item" href="/champions/role/Assassino">Assassino</a>
            <a class="dropdown-item" href="/champions/role/Tank">Tank</a>
            <a class="dropdown-item" href="/champions/role/Tiratore">Tiratore</a>
            <a class="dropdown-item" href="/champions/role/Mago">Mago</a>
            <a class="dropdown-item" href="/champions/role/Supporto">Supporto</a>
            <a class="dropdown-item" href="/champions/role/Combattente">Combattente</a>
        </div>

    </div>
    <!--Search bar column-->
    <div class="col-2 col-md-6">
        <!--
        <div class="box">
            <div class="container-4">
                <input type="search" id="search" placeholder="Search..." />
                <button class="icon">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>-->
    </div>
    <!--Sort by...column-->
    <div class="col-5 col-md-3" name="colonna3">
        <strong id="ordina" style="font-size: 21px">Ordina: </strong>
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropOrdina" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            {{#if_eq sort 'pricedesc'}}Prezzo ↓{{/if_eq}} {{#if_eq sort 'priceasc'}}Prezzo ↑{{/if_eq}} {{#if_eq sort 'namedesc'}}Alfabetico
            ↓{{/if_eq}} {{#if_eq sort 'nameasc'}}Alfabetico ↑{{/if_eq}}
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            {{#if_eq sort 'pricedesc'}}
            <a class="dropdown-item" href="/EB">Prezzo ↑</a>
            <a class="dropdown-item" href="/A-Z">Alfabetico ↓</a>
            <a class="dropdown-item" href="/Z-A">Alfabetico ↑</a>
            {{/if_eq}} {{#if_eq sort 'priceasc'}}
            <a class="dropdown-item" href="/">Prezzo ↓</a>
            <a class="dropdown-item" href="/A-Z">Alfabetico ↓</a>
            <a class="dropdown-item" href="/Z-A">Alfabetico ↑</a>
            {{/if_eq}} {{#if_eq sort 'nameasc'}}
            <a class="dropdown-item" href="/">Prezzo ↓</a>
            <a class="dropdown-item" href="/EB">Prezzo ↑</a>
            <a class="dropdown-item" href="/A-Z">Alfabetico ↓</a>
            {{/if_eq}} {{#if_eq sort 'namedesc'}}
            <a class="dropdown-item" href="/">Prezzo ↓</a>
            <a class="dropdown-item" href="/EB">Prezzo ↑</a>
            <a class="dropdown-item" href="/Z-A">Alfabetico ↑</a>
            {{/if_eq}}
        </div>
    </div>


</div>


