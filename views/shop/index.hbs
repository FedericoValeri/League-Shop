<div class="row">
    {{#each champions}}
    <div class="row">
        {{#each this}}
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="{{this.imagePath}}" class="img-thumbnail">
                <div class="caption">
                    <div class="row" name="rigaTitoloPrezzo">
                        <div class="col-sm-6 col-md-7" name="champName">
                            <h2 name="name"> {{this.name}}</h2>
                        </div>
                        <div class="col-sm-6 col-md-5" align="right" name="prezzo">
                            <h2 name="price"> {{this.price}}

                                <img name="tooltip" width="25" height="34" src="https://i.imgur.com/1xbbj2z.png">

                            </h2>
                        </div>

                    </div>

                    <h3 class="description">{{this.title}}
                    </h3>
                    <div class="clearfix">

                        <a href="/champ/{{this._id}}" class="button" style="vertical-align:middle" role="button">
                            <span>Informazioni </span>
                        </a>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Aggiungi al carrello</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>