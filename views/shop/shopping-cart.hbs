<br> {{#if products}}
<div class="row">
    <div class="col-sm-6 col-md-3  col-md-offset-3 col-sm-offset-3">

    </div>
    <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
        <h1>Carrello</h1>
        <br>
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item">
                <div class="row">
                    <div class="col-sm-6 col-md-8 col-md-offset-3 col-sm-offset-3">
                        <a href="/champ/{{this.item._id}}" style="color:black">
                            <strong>{{this.item.name}}</strong>
                        </a>
                    </div>
                    <div class="col-sm-6 col-md-2  col-md-offset-3 col-sm-offset-3">
                        <span style="color:rgb(26, 198, 250);font-weight:bold">{{this.price}} EB</span>
                    </div>
                    <div class="col-sm-6 col-md-2  col-md-offset-3 col-sm-offset-3">
                        <a href="/remove/{{this.item._id}}" role="button" class="float-right">
                            Rimuovi
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="col-sm-6 col-md-3  col-md-offset-3 col-sm-offset-3">

</div>

<br>
<div class="row">
    <div class="col-sm-6 col-md-3  col-md-offset-3 col-sm-offset-3">

    </div>
    <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
        <strong>
            <span style="color: white">Total: {{totalPrice}} EB</span>
        </strong>
    </div>
    <div class="col-sm-6 col-md-3  col-md-offset-3 col-sm-offset-3">

    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-3  col-md-offset-3 col-sm-offset-3">

    </div>
    <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
    <div class="col-sm-6 col-md-3  col-md-offset-3 col-sm-offset-3">

    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6  col-md-offset-3 col-sm-offset-3">
        <h2>No Items in Cart</h2>
    </div>
</div>
{{/if}}